<header>
  <!-- Nav Bar -->
  <nav id="navbar" class="navbar navbar-light navbar-expand-sm glass {% if site.navbar_fixed %}fixed-top{% endif %}" role="navigation">
    <div class="container">
      {% if page.permalink != '/' and page.permalink != '/it/' and page.permalink != '/fr/' %}
        <a
          class="navbar-brand title font-weight-lighter {% unless page.url contains '/publications' %}glass{% endunless %}"
          href="{{ site.baseurl }}/"
        >
          {% if site.title == 'blank' %}
            {% if site.first_name %}
              <span class="font-weight-bold">
                {{- site.first_name -}}
              </span>
            {% endif %}
            {% if site.middle_name %}
              {{- site.middle_name -}}
            {% endif %}
            {% if site.last_name %}
              <span class="surname">{{- site.last_name -}}</span>
            {% endif %}
          {% else %}
            {{- site.title -}}
          {% endif %}
        </a>
      {% elsif site.enable_navbar_social %}
        <!-- Social Icons -->
        <div class="navbar-brand social">{% include social.liquid %}</div>
      {% endif %}
      <!-- Navbar Toggle -->
      <button
        class="navbar-toggler collapsed ml-auto glass"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>

      <div class="collapse navbar-collapse text-right" id="navbarNav">
        <ul class="navbar-nav ml-auto flex-nowrap">
          {% for page in site.pages %}
            {% if page.permalink == '/' %} {% assign about_title = page.title %} {% endif %}
          {% endfor %}

          <!-- About -->
          <li class="nav-item {% if page.permalink == '/' %}active{% endif %}">
            <a class="nav-link" href="{{ '/' | relative_url }}">
              {{- about_title }}
              {% if page.permalink == '/' %}
                <span class="sr-only">(current)</span>
              {% endif %}
            </a>
          </li>

          <!-- Other pages -->
          {% assign current_lang = page.lang | default: 'en' %}
          {% assign sorted_pages = site.pages | sort: 'nav_order' %}
          {% for p in sorted_pages %}
            {% if p.nav and p.autogen == null %}
              {% assign p_lang = p.lang | default: 'en' %}
              {% if p_lang != current_lang %}
                {% continue %}
              {% endif %}
              {% if p.dropdown %}
                {% assign has_active_child = false %}
                {% for child in p.children %}
                  {% if page.title == child.title %}
                    {% assign has_active_child = true %}
                  {% endif %}
                {% endfor %}
                <li class="nav-item dropdown {% if page.title == p.title or has_active_child %}active{% endif %}">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    id="navbarDropdown"
                    role="button"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                    {{- p.title }}
                    {% if page.title == p.title or has_active_child %}
                      <span class="sr-only">(current)</span>
                    {% endif %}
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    {% for child in p.children %}
                      {% if child.title == 'divider' %}
                        <div class="dropdown-divider"></div>
                      {% else %}
                        <a
                          class="dropdown-item {% if page.title == child.title %}active{% endif %}"
                          href="{% if child.permalink contains '://' %}{{ child.permalink }}{% else %}{{ child.permalink | relative_url }}{% endif %}"
                        >
                          {{- child.title -}}
                        </a>
                      {% endif %}
                    {% endfor %}
                  </div>
                </li>
              {% else %}
                {% assign parent_link = p.permalink | remove: 'index.html' %}
                <li class="nav-item {% if page.url contains parent_link %}active{% endif %}">
                  {%- if p.permalink contains '://' -%}
                    {%- assign url = p.permalink -%}
                  {%- elsif p.permalink contains '/blog/' -%}
                    {%- assign url = '/blog/' -%}
                  {%- else -%}
                    {%- assign url = p.url -%}
                  {%- endif %}
                  <a class="nav-link" href="{{ url | relative_url }}">
                    {%- assign link_path = url | relative_url -%}
                    {%- if link_path contains 'publications' -%}
                      {%- if current_lang == 'it' -%}pubblicazioni{% elsif current_lang == 'fr' -%}publications{% else -%}publications{% endif -%}
                    {%- else -%}
                      {{- p.title -}}
                    {%- endif -%}
                    {% if page.url contains p.url %}
                      <span class="sr-only">(current)</span>
                    {% endif %}
                  </a>
                </li>
              {% endif %}
            {% endif %}
          {% endfor %}
          {% if site.search_enabled %}
            <!-- Search -->
            <li class="nav-item">
              <button id="search-toggle" title="Search" onclick="openSearchModal()" class="btn btn-sm btn-glass">
                <span class="nav-link">ctrl k <i class="ti ti-search"></i></span>
              </button>
            </li>
          {% endif %}
          {% if site.enable_darkmode %}
            <!-- Theme toggle removed: site is dark-only -->
          {% endif %}
          <!-- Language switcher as last nav item (link-based for pre-translated sites) -->
          <li class="nav-item">
            <div id="lang-switch" class="lang-switch" aria-label="Language switch">
              {% if current_lang == 'it' %}
                <a id="lang-current" class="lang-current" href="/it/">&#127470;&#127481;</a>
              {% elsif current_lang == 'fr' %}
                <a id="lang-current" class="lang-current" href="/fr/">&#127467;&#127479;</a>
              {% else %}
                <a id="lang-current" class="lang-current" href="/">&#127468;&#127463;</a>
              {% endif %}
              <div id="lang-options" class="lang-options" role="menu" aria-hidden="true">
                <a class="lang-option" href="/">&#127468;&#127463; English</a>
                <a class="lang-option" href="/it/">&#127470;&#127481; Italiano</a>
                <a class="lang-option" href="/fr/">&#127467;&#127479; Fran√ßais</a>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  {% if site.enable_progressbar %}
    <!-- Scrolling Progress Bar -->
    <progress id="progress" value="0">
      <div class="progress-container">
        <span class="progress-bar"></span>
      </div>
    </progress>
  {% endif %}
</header>

<script>
  // Minimal toggle for the language dropdown: hidden by default, shown when clicking the current flag.
  (function () {
    document.addEventListener('DOMContentLoaded', function () {
      var current = document.getElementById('lang-current');
      var opts = document.getElementById('lang-options');
      if (!current || !opts) return;
      current.addEventListener('click', function (e) {
        e.preventDefault();
        e.stopPropagation();
        // toggle open class instead of relying on inline style
        var isOpen = opts.classList.toggle('open');
        opts.setAttribute('aria-hidden', !isOpen);
      });
      // Prevent clicks inside the options from bubbling and being closed immediately
      opts.addEventListener('click', function (e) {
        e.stopPropagation();
      });
      // Close when clicking outside
      document.addEventListener('click', function (e) {
        if (!opts.contains(e.target) && e.target !== current) {
          if (opts.classList.contains('open')) {
            opts.classList.remove('open');
            opts.setAttribute('aria-hidden', 'true');
          }
        }
      });

      // Centralized closer for the language options
      function closeLangOptions() {
        if (!opts) return;
        if (opts.classList.contains('open')) {
          opts.classList.remove('open');
          opts.setAttribute('aria-hidden', 'true');
        }
      }

      // If the mobile navbar collapse opens, ensure the language popup is closed.
      var navCollapse = document.getElementById('navbarNav');
      var navToggler = document.querySelector('.navbar-toggler');
      if (navCollapse) {
        // Prefer binding to Bootstrap events via jQuery if available (reliable).
        if (window.jQuery && typeof window.jQuery === 'function') {
          try {
            window.jQuery(navCollapse).on('show.bs.collapse', closeLangOptions);
          } catch (err) {
            // ignore and fall back
          }
        }
        // Also bind a click handler on the toggler as a simple fallback.
        if (navToggler) {
          navToggler.addEventListener('click', function () {
            // close immediately so the popup isn't visible when the navbar expands
            closeLangOptions();
          });
        }
        // Existing MutationObserver fallback (keeps previous behavior)
        var mo = new MutationObserver(function (mutations) {
          mutations.forEach(function (m) {
            if (m.attributeName === 'class') {
              if (navCollapse.classList.contains('show')) {
                closeLangOptions();
              }
            }
          });
        });
        mo.observe(navCollapse, { attributes: true, attributeFilter: ['class'] });
      }
    });
  })();
</script>
